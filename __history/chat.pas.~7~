unit chat;

interface

uses game;

type ChatClass = class

   public
   procedure  outputChatMessage(msg : string);

   constructor Create;
   destructor Destroy;

end;

var CC :ChatClass;

implementation

constructor ChatClass.Create;
begin

end;

destructor ChatClass.Destroy;
begin

end;

procedure ChatClass.outputChatMessage(msg : string);
begin
  GameInterface.chatframe.Lines.Add(msg);
end;

end.
